@prefix dbo: <http://dbpedia.org/ontology/> .
@prefix dbr: <http://dbpedia.org/resource/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix : <http://example.org/> .

:MovieShape a sh:NodeShape;
   sh:targetClass dbo:Film;	
   sh:property [
     sh:path dbo:writer;
     sh:minCount 1
   ] ;
   sh:property [
     sh:path dbo:musicComposer;
     sh:minCount 1
   ] ;
   sh:property [
     sh:path dbo:director;
     sh:minCount 1
   ] ;
   sh:property [
     sh:path dbo:imdbId;
     sh:minCount 1;
     sh:maxCount 1
   ];
   sh:property [
     sh:path dbo:starring;
	 sh:qualifiedValueShape [
        sh:node :ActorShape
     ] ;
     sh:qualifiedMinCount 1
   ] .


:ActorShape a sh:NodeShape;
                   sh:property [
                     sh:path dbo:birthPlace;
                     sh:minCount 1
                   ] ;
                   sh:property [
     sh:path dbo:activeYearsStartYear;
     sh:minCount 1
   ] ;
   sh:property [
     sh:path dbo:occupation;
	 sh:qualifiedValueShape [
	   sh:hasValue dbr:Actor ;
     ];
     sh:qualifiedMinCount 1
   ]; 
   sh:property [
     sh:path dbo:imdbId;
     sh:minCount 1
   ] .
